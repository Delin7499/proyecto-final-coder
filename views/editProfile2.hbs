<div class='flex flex-col items-center p-4'>
  <div
    class='w-full md:w-1/2 lg:w-1/3 bg-white border-4 border-gray-200 shadow-lg rounded-lg overflow-hidden'
  >

    <h1 class='text-2xl font-bold text-gray-800 text-center py-4'>Edit User
      Profile</h1>

    <!-- Profile Picture Form -->
    <form
      id='profilePicForm'
      action='file-upload/profile-picture'
      method='post'
      enctype='multipart/form-data'
      class='px-6 py-4'
    >
      <div class='flex justify-center mb-4'>
        <img
          id='profilePic'
          class='rounded-full border-2 border-gray-300 cursor-pointer h-32 w-32 object-cover'
          src='{{profilePicture}}'
          alt='User Profile Picture'
        />
        <input type='file' name='file' id='fileInput' class='hidden' />
      </div>
      <div class='flex justify-end'>
        <button
          id='submitButton'
          type='submit'
          class='text-white bg-blue-500 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5'
        >
          <!-- SVG here -->
        </button>
      </div>
    </form>

    <!-- Personal Info Form -->
    <form
      id='personalInfoForm'
      action='api/users/edit'
      method='post'
      class='px-6'
    >
      <div class='space-y-3 py-4'>
        <div class='flex items-center space-x-2'>
          <label for='first_name' class='font-semibold text-gray-700'>First
            Name:</label>
          <input
            type='text'
            class='border-2 border-gray-300 rounded-md p-2'
            id='first_name'
            name='first_name'
          />
        </div>
        <div class='flex items-center space-x-2'>
          <label for='last_name' class='font-semibold text-gray-700'>Last Name:</label>
          <input
            id='last_name'
            type='text'
            class='border-2 border-gray-300 rounded-md p-2'
            name='last_name'
          />
        </div>
        <div class='flex items-center space-x-2'>
          <label for='email' class='font-semibold text-gray-700'>Email:</label>
          <span id='email' class='text-gray-600'>{{user.email}}</span>
        </div>
        <div class='flex items-center space-x-2'>
          <label for='age' class='font-semibold text-gray-700'>Age:</label>
          <span id='age' class='text-gray-600'>{{user.age}}</span>
        </div>
        <div class='flex items-center space-x-2'>
          <label for='role' class='font-semibold text-gray-700'>Role:</label>
          <span id='role' class='text-gray-600'>{{user.role}}</span>
        </div>
      </div>
      <div class='flex justify-end pb-4'>
        <button
          id='submitButton'
          type='submit'
          class='text-white bg-blue-500 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5'
        >
          <!-- SVG here -->
        </button>
      </div>
    </form>

    <!-- Additional Forms (Account Status, Proof of Address) -->
    <!-- Similar styling as above forms -->

  </div>
</div>

<script src='js/editProfile.js'></script>