<div class='flex flex-col items-center p-4'>
  <div
    class='w-full md:w-1/2 lg:w-1/3 bg-white border-4 border-gray-200 shadow-lg rounded-lg overflow-hidden'
  >

    <h1 class='text-2xl font-bold text-gray-800 text-center py-4'>Edit User
      Profile</h1>

    <!-- Profile Picture Form -->
    <form
      id='profilePicForm'
      action='file-upload/profile-picture'
      method='post'
      enctype='multipart/form-data'
      class='px-6 py-4'
    >
      <div class='flex justify-center mb-4'>
        <div class='relative h-32 w-32'>
          <img
            id='profilePic'
            class='rounded-full border-2 border-gray-300 cursor-pointer h-32 w-32 object-cover'
            src='{{profilePicture}}'
            alt='User Profile Picture'
          />

          <!-- Edit Icon at the bottom right corner -->
          <div class='absolute bottom-0 right-0 mb-1 mr-1'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
              class='w-6 h-6'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10'
              />
            </svg>

          </div>
        </div>
        <input type='file' name='file' id='fileInput' class='hidden' />
      </div>
      <div class='flex justify-end'>
        <button
          id='submitButtonProfilePic'
          type='submit'
          class='text-white bg-blue-500 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5'
          hidden='true'
        >Update Profile Picture
          <!-- SVG here -->
        </button>
      </div>
    </form>

    <!-- Personal Info Form -->
    <form
      id='personalInfoForm'
      action='api/users/edit'
      method='post'
      class='px-6'
    >
      <div class='space-y-3 py-4'>
        <div class='flex items-center space-x-2'>
          <label for='first_name' class='font-semibold text-gray-700'>First
            Name:</label>
          <input
            type='text'
            class='border-2 border-gray-300 rounded-md p-2'
            id='first_name'
            name='first_name'
          />
        </div>
        <div class='flex items-center space-x-2'>
          <label for='last_name' class='font-semibold text-gray-700'>Last Name:</label>
          <input
            id='last_name'
            type='text'
            class='border-2 border-gray-300 rounded-md p-2'
            name='last_name'
          />
        </div>
        <div class='flex items-center space-x-2'>
          <label for='email' class='font-semibold text-gray-700'>Email:</label>
          <span id='email' class='text-gray-600'>{{user.email}}</span>
        </div>
        <div class='flex items-center space-x-2'>
          <label for='age' class='font-semibold text-gray-700'>Age:</label>
          <span id='age' class='text-gray-600'>{{user.age}}</span>
        </div>
        <div class='flex items-center space-x-2'>
          <label for='role' class='font-semibold text-gray-700'>Role:</label>
          <span id='role' class='text-gray-600'>{{user.role}}</span>
        </div>
      </div>
      <div class='flex justify-end pb-4'>
        <button
          id='submitButton'
          type='submit'
          class='text-white bg-blue-500 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5'
        >Update Personal Info
          <!-- SVG here -->
        </button>
      </div>
    </form>

    <!-- Account Status Form -->
    <form
      id='accountStatusForm'
      action='file-upload/account-status'
      method='post'
      enctype='multipart/form-data'
      class='px-6 py-4'
    >
      <div class='flex justify-center mb-4'>

        <div class='relative h-32 w-32'>
          <img
            id='account-status'
            class='rounded-full border-2 border-gray-300 cursor-pointer h-32 w-32 object-cover'
            src='{{profilePicture}}'
            alt='User Account Status Picture'
          />

          <!-- Edit Icon at the bottom right corner -->
          <div class='absolute bottom-0 right-0 mb-1 mr-1'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
              class='w-6 h-6'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10'
              />
            </svg>

          </div>
        </div>
        <input
          type='file'
          name='file'
          id='file-account-status'
          class='hidden'
          required
        />
      </div>
      <div class='flex justify-end'>
        <button
          id='submitButtonAccountStatus'
          type='submit'
          class='text-white bg-blue-500 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5'
          hidden='true'
        >Update Account Status
          <!-- SVG here -->
        </button>
      </div>
    </form>

    <!-- Proof of Address Form -->
    <form
      id='proofOfAddressForm'
      action='file-upload/proof-of-address'
      method='post'
      enctype='multipart/form-data'
      class='px-6 py-4'
    >
      <div class='flex justify-center mb-4'>

        <div class='relative h-32 w-32'>
          <img
            id='proof-of-address'
            class='rounded-full border-2 border-gray-300 cursor-pointer h-32 w-32 object-cover'
            src='{{profilePicture}}'
            alt='User Proof of Address Picture'
          />

          <!-- Edit Icon at the bottom right corner -->
          <div class='absolute bottom-0 right-0 mb-1 mr-1'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
              class='w-6 h-6'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10'
              />
            </svg>

          </div>
        </div>
        <input
          type='file'
          name='file'
          id='file-proof-of-address'
          class='hidden'
          required
        />
      </div>
      <div class='flex justify-end'>
        <button
          id='submitButtonProofOfAddress'
          type='submit'
          class='text-white bg-blue-500 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5'
          hidden='true'
        >Update Proof of Address
          <!-- SVG here -->
        </button>
      </div>
    </form>

  </div>
</div>

<script src='js/editProfile.js'></script>