<h1>Product List</h1>
<input type="hidden" id="email" name="email" value="{{email}}" />
<div id="products" class="product-grid">
</div>
<div id="forms-container">
  <div id="add-product-form">
    <h2>Add a Product</h2>
    <form id="productForm">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required /><br />
      <label for="description">Description:</label>
      <input type="text" id="description" name="description" required /><br />
      <label for="code">Code:</label>
      <input type="text" id="code" name="code" required /><br />
      <label for="price">Price:</label>
      <input type="number" id="price" name="price" required /><br />
      <label for="status">Status:</label>
      <input type="checkbox" id="status" name="status" required /><br />
      <label for="stock">Stock:</label>
      <input type="number" id="stock" name="stock" required /><br />
      <label for="category">Category:</label>
      <select id="category" name="category">
      </select>
      <label for="thumbnail">Thumbnail URL:</label>
      <input type="text" id="thumbnail" name="thumbnail" required /><br />
      <button type="submit">Add Product</button>
    </form>
  </div>

  <div id="delete-product-form">

    <h2>Delete a Product by ID</h2>
    <form id="deleteProductForm">
      <label for="deleteId">Product ID:</label>
      <input type="text" id="deleteId" name="deleteId" required /><br />
      <button type="submit">Delete Product</button>
    </form>

  </div>
  <div id="add-category-form">
    <h2>Add a Category</h2>
    <form id="addCategoryForm">
      <label for="categoryName">Category Name:</label>
      <input type="text" id="categoryName" name="categoryName" required /><br />
      <button type="submit">Add Category</button>
    </form>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>