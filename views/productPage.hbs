<div id='cartID' data-id='{{cartId}}' class='hidden'></div>
<div
  id='productPage'
  data-id='{{pid}}'
  class='flex flex-wrap md:flex-nowrap p-4'
>

  <!-- Left Column: Product Details -->
  <div
    class='w-full md:w-1/2 lg:w-2/5 bg-white border-4 border-gray-200 shadow-lg rounded-lg overflow-hidden mb-4 md:mb-0 md:mr-4'
  >
    <img
      id='productThumbnail'
      alt='Product thumbnail'
      class='w-full h-64 object-cover'
    />

    <div class='px-6 py-4'>
      <h1 id='productTitle' class='text-2xl font-bold text-gray-800 mb-2'></h1>
      <p id='productDescription' class='text-gray-600 mb-4'></p>

      <div class='flex justify-between items-center mb-2'>
        <label for='productPrice' class='font-semibold text-gray-700'>Price: $</label>
        <p id='productPrice' class='font-semibold'></p>
      </div>

      <div class='flex justify-between items-center mb-4'>
        <label
          for='quantity'
          class='font-semibold text-gray-700'
        >Quantity:</label>
        <p id='productStock' class='font-semibold'></p>
      </div>

      <div class='flex items-center space-x-2'>
        <input
          id='quantity'
          type='number'
          min='1'
          max='999'
          value='1'
          class='border-2 border-gray-300 rounded-md p-2 w-16'
        />
        <button
          id='addToCart'
          class='text-white bg-blue-500 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5'
        >Add to Cart</button>
      </div>
    </div>
  </div>

  <!-- Right Column: Reserved for Future Content -->
  <div class='w-full md:w-1/3 lg:w-3/5'>
    <!-- Future content goes here -->
  </div>

</div>
<script src='/js/productPage.js'></script>