<div class='flex flex-col md:flex-row'>

  <!-- Cart Products -->
  <div class='flex-auto'>

    <h1 data-id='{{cartId}}' id='cart' class='text-xl font-bold mb-4'>Cart
      {{cartId}}</h1>
    <div id='products' class='grid grid-cols-1 md:grid-cols-3 gap-4'></div>

  </div>

  <!-- Cart Summary -->
  <div class='flex-auto'>
    <div id='cartSummary' class='rounded-md bg-slate-600 p-4 mb-4'>
      <h2 class='text-white text-lg mb-3'>Cart Summary</h2>
      <ul id='cartItems' class='text-white'></ul>
      <div class='flex'>
        <p class='flex-auto'>Total: </p>
        <p id='totalValue' class='text-white'>Total: </p>
      </div>

    </div>

    <button
      id='purchaseButton'
      type='submit'
      class='w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
    >
      Purchase Ticket
    </button>

  </div>

</div>

<script src='/js/cart.js'></script>