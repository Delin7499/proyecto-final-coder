<div class='flex flex-col md:flex-row md:space-x-4 p-4'>

  <!-- Cart Products -->
  <div
    class='md:flex-auto md:w-2/3 bg-zinc-200 rounded-lg shadow-md mb-4 md:mb-0'
  >
    <h1 data-id='{{cartId}}' id='cart' class='text-xl font-bold mb-4'>Cart
      {{cartId}}</h1>
    <div id='products' class='grid grid-cols-1 md:grid-cols-3 gap-4'></div>
  </div>

  <!-- Cart Summary -->
  <div class='w-full md:w-1/3'>
    <div id='cartSummary' class='rounded-md bg-slate-600 p-4'>
      <h2 class='text-white text-lg mb-3'>Cart Summary</h2>
      <ul id='cartItems' class='text-white mb-4'></ul>
      <div class='flex justify-between'>
        <p class='text-white'>Total: </p>
        <p id='totalValue' class='text-white'></p>
      </div>
    </div>

    <button
      id='purchaseButton'
      type='submit'
      class='w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4 disabled:bg-slate-400'
    >
      Purchase Ticket
    </button>
  </div>

</div>
<script src='/js/cart.js'></script>